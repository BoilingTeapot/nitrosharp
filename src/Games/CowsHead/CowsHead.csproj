<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <OutputType>Exe</OutputType>
    <ApplicationIcon>hoppygirl_fA5_icon.ico</ApplicationIcon>
    <PlatformTarget>x64</PlatformTarget>
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>

  <Import Project="..\..\..\OutputPath.props" />

  <PropertyGroup Condition="'$(TargetFramework)' == 'net461'">
    <!--Disable console for release netfx builds-->
    <OutputType Condition="'$(Configuration)' == 'Release'">WinExe</OutputType>
  </PropertyGroup>
  
  <ItemGroup>
    <Content Include="Game.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <RdXmlFile Include="rd.xml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\NitroSharp.Launcher\NitroSharp.Launcher.csproj" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Condition="'$(Native)' == 'true'" Include="Microsoft.DotNet.ILCompiler" Version="1.0.0-alpha-27102-02" />
  </ItemGroup>

  <!--<Import Project="$(MSBuildSDKsPath)\Microsoft.NET.Sdk\Sdk\Sdk.targets" />
  <Import Project="$(IlcPath)\build\Microsoft.NETCore.Native.targets" />-->
  
</Project>
