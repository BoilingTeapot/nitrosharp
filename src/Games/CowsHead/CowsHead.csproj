<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netcoreapp2.0</TargetFrameworks>
    <OutputType>Exe</OutputType>
    <ApplicationIcon>hoppygirl_fA5_icon.ico</ApplicationIcon>
    <ShaderOutputPath>$(BaseIntermediateOutputPath)</ShaderOutputPath>
    <ShaderContentIncludePath>Shaders.Generated</ShaderContentIncludePath>
  </PropertyGroup>

  <Import Project="..\..\..\OutputPath.props" />

  <PropertyGroup Condition="'$(TargetFramework)' == 'net461'">
    <!--Disable console for release netfx builds-->
    <OutputType Condition="'$(Configuration)' == 'Release'">WinExe</OutputType>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.0'">
    <PackageReference Include="ILLink.Tasks" Version="0.1.4-preview-981901" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="0.jpg">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="meow.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="mask.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Game.json" CopyToOutputDirectory="PreserveNewest" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="NitroSharp.Dependencies.FFmpeg" Version="0.1.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Nitrosharp.Launcher\NitroSharp.Launcher.csproj" />
    <ProjectReference Include="..\..\NitroSharp\NitroSharp.csproj" />
  </ItemGroup>

</Project>
