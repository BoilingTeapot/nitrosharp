    <PackageReference Include="NitroSharp.Dependencies.FFmpeg" Version="0.4.0.13" />
    <PackageReference Include="NitroSharp.Dependencies.FreeType" Version="0.2.903" />
    <PackageReference Include="NitroSharp.Dependencies.OpenALSoft" Version="1.18.2" />
    <PackageReference Include="NitroSharp.Fonts" Version="0.1.1" />
