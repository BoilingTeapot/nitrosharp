<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <ShaderOutputPath>$(BaseIntermediateOutputPath)\Shaders.Generated</ShaderOutputPath>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <NoWarn>1701;1702;CA1063</NoWarn>
  </PropertyGroup>

  <Import Project="..\..\OutputPath.props" />
  
  <ItemGroup>
    <ProjectReference Include="..\NitroSharp.NsScript\NitroSharp.NsScript.csproj" />
    <ProjectReference Include="..\FreeTypeBindings\FreeTypeBindings.csproj" />

    <ProjectReference Include="..\..\..\SomeAnonDev\veldrid\src\Veldrid.OpenGLBindings\Veldrid.OpenGLBindings.csproj" />
    <ProjectReference Include="..\..\..\SomeAnonDev\veldrid\src\Veldrid.SDL2\Veldrid.SDL2.csproj" />
    <ProjectReference Include="..\..\..\SomeAnonDev\veldrid\src\Veldrid.StartupUtilities\Veldrid.StartupUtilities.csproj" />
    <ProjectReference Include="..\..\..\SomeAnonDev\veldrid\src\Veldrid\Veldrid.csproj" />
    
    <PackageReference Include="NitroSharp.Dependencies.FFmpeg" Version="0.4.0.12" />
    <PackageReference Include="NitroSharp.Dependencies.FreeType" Version="0.2.903" />
    <PackageReference Include="NitroSharp.Fonts" Version="0.1.1" />
    <PackageReference Include="FFmpeg.AutoGen.DllImport" Version="0.4.0" />
    <PackageReference Include="System.Memory" Version="4.5.0" />
    <PackageReference Include="System.Runtime.CompilerServices.Unsafe" Version="4.5.0" />

    <!--<PackageReference Include="Veldrid" Version="4.2.0-beta1" />
    <PackageReference Include="Veldrid.StartupUtilities" Version="4.2.0-beta1" />-->
    <PackageReference Include="ShaderGen.Primitives" Version="1.2.0-g4bf25fc276" />
    <PackageReference Include="ShaderGen.Build" Version="1.2.0-g4bf25fc276" PrivateAssets="All" />
    
    <PackageReference Include="SharpDX.Direct2D1" Version="4.0.1" />

    <Compile Remove="Content/ImageSharpTextureLoader.cs" />

    <!--<PackageReference Include="FFmpeg.AutoGen" Version="4.0.0" />-->
  </ItemGroup>

  <Target Name="EmbedGeneratedShaderContent" AfterTargets="AssignTargetPaths">
    <ItemGroup>
      <EmbeddedResource Include="@(GeneratedShader)">
        <LogicalName>NitroSharp.Graphics.Shaders.%(FileName)%(Extension)</LogicalName>
      </EmbeddedResource>
    </ItemGroup>
  </Target>
  
</Project>
