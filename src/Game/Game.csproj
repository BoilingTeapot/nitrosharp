<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <Nullable>enable</Nullable>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <ApplicationIcon>CoZ.ico</ApplicationIcon>
    <PlatformTarget>x64</PlatformTarget>
    <DebugType>pdbonly</DebugType>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    <RootAllApplicationAssemblies>false</RootAllApplicationAssemblies>
    <IlcGenerateCompleteTypeMetadata>false</IlcGenerateCompleteTypeMetadata>
    <IlcGenerateStackTraceData>false</IlcGenerateStackTraceData>
    <InvariantGlobalization>true</InvariantGlobalization>
    <TrimMode>link</TrimMode>
    <RootNamespace>CowsHead</RootNamespace>
    <NoWarn>VSTHRD103;VSTHRD200</NoWarn>
  </PropertyGroup>

  <Import Project="..\..\OutputPath.props" />

  <!--<PropertyGroup Condition="'$(Configuration)' == 'Release'">
    <OutputType>WinExe</OutputType>
  </PropertyGroup>-->

  <ItemGroup>
    <Content Include="Game.json" CopyToOutputDirectory="PreserveNewest" />
    <RdXmlFile Include="rd.xml" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\NitroSharp\NitroSharp.csproj" />

    <PackageReference Include="System.Json" Version="4.7.1" />
    <PackageReference Condition="'$(Native)' == 'true'" Include="Microsoft.DotNet.ILCompiler" Version="6.0.0-rc.1.21420.1" />
  </ItemGroup>

</Project>
